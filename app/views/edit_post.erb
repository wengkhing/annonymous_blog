<div class="container">
  <div class="header">
    <a href="/"><h1>Zik</h1></a>
    <h2>Create New Post</h2>
  </div>

  <div class="content">
    <form action="/posts/<%=@post.id%>/edit" method="post">
      <input type="text" name="title" placeholder="Title" value="<%=@post.title%>"><br>
      <textarea name="body" placeholder="Start blogging here!" rows="10"><%=@post.body%></textarea><br>
      <input type="text" name="tags" placeholder="Tags"
      value="<%@post.tags.each do |t|%><%=t.name%>,<%end%>"><br>
      <input type="submit" value="Blog This">
    </form>
  </div>
</div>